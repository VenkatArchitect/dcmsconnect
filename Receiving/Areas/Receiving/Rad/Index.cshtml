            var adapters = {
                styleGroup: new Bloodhound({
                    datumTokenizer: Bloodhound.tokenizers.obj.whitespace('value'),
                    queryTokenizer: Bloodhound.tokenizers.whitespace,
                    remote: {
                        wildcard: '~',
                        url: '@Url.Action(MVC_Receiving.Receiving.AutoComplete.StyleAutocomplete("~"))',
                        ajax: { cache: false }
                    }
                }),
                colorGroup: new Bloodhound({
                    datumTokenizer: Bloodhound.tokenizers.obj.whitespace('value'),
                    queryTokenizer: Bloodhound.tokenizers.whitespace,
                    remote: {
                        wildcard: '~',
                        url: '@Url.Action(MVC_Receiving.Receiving.AutoComplete.ColorAutocomplete("~"))',
                        ajax: { cache: false }
                    }
                })
            };

            for (var key in adapters) {
                adapters[key].initialize();
            }

            // The hidden field must be immediately after the input group
            $('#styleGroup,#colorGroup').on('change', 'input:checkbox:checked', function (e) {
                // Style checkbox has been checked by the user. He wants to enter a specific style
                $('input.typeahead', e.delegateTarget).prop('disabled', false)
                    .typeahead(null, {
                        name: 'Styles',
                        displayKey: 'label',
                        source: adapters[e.delegateTarget.id].ttAdapter(),
                        templates: {
                            empty: 'No matching choices'
                        }
                    }).on('typeahead:selected.mytypeahead typeahead:autocompleted.mytypeahead', { "$tbHidden": $(e.delegateTarget).next('input') }, function (e, sug, ds) {
                        // Store the id of the selected style in the hdden field
                        //alert('Hi');
                        e.data.$tbHidden.val(sug.value);
                    }).on('input.mytypeahead', { "$tbHidden": $(e.delegateTarget).next('input') }, function (e) {
                        // When user changes the style, empty the hidden field
                        e.data.$tbHidden.val('');
                    });
            }).on('change', 'input:checkbox:not(":checked")', function (e) {
                // Style checkbox has been unchecked by the user. He wants to use all styles
                // Destroy the typeahead
                $('input.typeahead', e.delegateTarget).prop('disabled', true)
                    .typeahead('destroy')
                    .off('.mytypeahead');
            });

            // Handle change event of radio button for All styles and AllColors.
            // Initialize value for radio button based on checked state.Also initialize value for style autocomplete.
