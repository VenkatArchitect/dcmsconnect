@*    Contract:
    1. data-autocomplete-url: Needed for attaching auto complete on Carrier.
*@

@model DcmsMobile.Receiving.Areas.Receiving.Home.IndexViewModel
@{
    Layout = MVC_Receiving.Receiving.SharedViews.Views._layoutReceiving;
    ViewBag.Title = "Receiving Home";
}

<div class="container">
    <div class="page-header">
        <h1>Recent Shipments Received</h1>
    </div>
    <div class="well well-sm">
        <form class="form-horizontal" role="form" action="@Url.Action(MVC_Receiving.Receiving.Home.Receiving())" method="get">
            <div class="form-group">
                <p class="col-sm-4 control-label">To continue receiving a shipment, select or search</p>
                <div class="col-sm-2">
                    <div class="input-group">
                        <input type="number" id="search" placeholder="Process Id" name="@MVC_Receiving.Receiving.Home.ReceivingParams.processId"
                               class="form-control" autofocus required style="-moz-appearance: textfield" />
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                        </span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <a href="@Url.Action(MVC_Receiving.Receiving.Home.CreateProcess())" class="btn btn-link" style="font-size:1.2em">Receive New Shipment</a>
                </div>
            </div>
        </form>
    </div>

    <ul class="list-group">
        @for (var i = 0; i < Model.RecentProcesses.Count; ++i)
        {
            <li class="list-group-item">
                <span class="badge ">
                    @Html.DisplayFor(m => m.RecentProcesses[i].CartonCount) of @Html.DisplayFor(m => m.RecentProcesses[i].ExpectedCartons)
                    ctn on @Html.DisplayFor(m => m.RecentProcesses[i].PalletCount) pallets
                </span>
                <h4 class="list-group-item-heading"><a href="@Url.Action(MVC_Receiving.Receiving.Home.Receiving(Model.RecentProcesses[i].ProcessId))">@Html.DisplayFor(m => m.RecentProcesses[i].ProcessId)</a> <small>by @Html.DisplayFor(m => m.RecentProcesses[i].OperatorName)</small></h4>
                <p class="pull-right label label-info list-group-item-text" @*style="font-size:1.05em"*@>
                    Started On @Html.DisplayFor(m => m.RecentProcesses[i].ReceivingStartDate) @Html.DisplayFor(m => m.RecentProcesses[i].ElapsedTime)
                </p>
                <p class="list-group-item-text">
                    PRO# @Html.DisplayFor(m => m.RecentProcesses[i].ProNumber) dated @Html.DisplayFor(m => m.RecentProcesses[i].ProDate) <mark>@Html.DisplayFor(m => m.RecentProcesses[i].CarrierDisplayName)</mark>
                </p>
            </li>
        }
    </ul>
</div>


