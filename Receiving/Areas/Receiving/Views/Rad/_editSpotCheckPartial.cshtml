@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}
@model DcmsMobile.Receiving.ViewModels.Rad.SpotCheckViewModel

<div class="modal-body">
    <small class="text-info">
        <span class="glyphicon glyphicon-info-sign"></span>
        @Html.LabelFor(m => m.Style) :
        <span data-name="@Html.NameFor(m => m.Style)"
              data-val=""></span>

        &bull;
        @Html.LabelFor(m => m.Color) :
        <span data-name="@Html.NameFor(m => m.Color)"
              data-val=""></span>

        &bull;
        @Html.LabelFor(m => m.SewingPlantId) :
        <span data-name="@Html.NameFor(m => m.SewingPlantId)"
              data-val=""></span>
        &bull;
        @Html.LabelFor(m => m.SpotCheckPercent) :
        <span data-name="@Html.NameFor(m => m.SpotCheckPercent)"
              data-val=""></span>
    </small>
    <form class="form-horizontal" action="@Url.Action(MVC_Receiving.Receiving.Rad.SetSpotCheckPercentage())" method="post" role="form">
        @Html.HiddenFor(m => m.Style)
        @Html.HiddenFor(m => m.SewingPlantId)
        @Html.HiddenFor(m => m.Color)
        <div class="form-group">
            <label class="col-sm-3 control-label" for="newPercent">New Percentage</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.SpotCheckPercent, new { size = 4 })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="@Html.NameFor(m=>m.IsSpotCheckEnabled)" value="" id="cbEditIsSpotCheckEnable" /> Enable Configuration
                    </label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Ok</button>
        </div>
        @Html.ValidationSummary()
    </form>
</div>
    

    
   
