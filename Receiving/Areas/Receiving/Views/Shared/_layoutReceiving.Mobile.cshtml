<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <link href="@(Links_Receiving.Areas.Receiving.Content.Receiving_mobile_all_css)" rel="stylesheet" type="text/css" />
</head>
<body onkeydown="window.event.keyCode == 124 && window.close()" onkeypress="OnBodyKeyPress()">
    @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
    {
        <div style="position: absolute; right: 1mm; text-align: right; z-index: 100">
            <a href="@Url.Content("~")" accesskey="0">Home</a> <span>Welcome @ViewContext.HttpContext.User.Identity.Name</span>
        </div>
    }
    <div id="outer">
        <div id="header">
            <h1>
                @ViewBag.Title</h1>
            <h2>
                @ViewBag.Subtitle</h2>
        </div>
        <div id="content">
            <div id="primaryContentContainer">
                <div id="primaryContent">
                    @RenderBody()
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
    <h2>
        P2 to Exit
    </h2>
    @RenderSection("scripts", false)
    <script type="text/javascript">
        function OnBodyKeyPress() {
            if (window.event.srcElement.id != 'scan') {
                var tbScan = document.getElementById('scan');
                tbScan.value = '';
                tbScan.focus();
            }
        }
        // Set focus to first input box when the page loads
        var input = document.getElementById('scan');
        if (input) {
            input.focus();
        }
    </script>
</body>
</html>



