@model DcmsMobile.REQ2.ViewModels.Pull.CartonViewModel

<div>Pallet <b>@Model.PalletId</b> for request @Model.RequestId</div>
<div>@Model.SourceShortName &rarr; @Model.DestShortName</div>
@using (Html.BeginForm(MVC_REQ2.REQ2.Pull.PostCarton(), FormMethod.Post))
{
    @Html.HiddenFor(m => m.PalletId)
    @Html.HiddenFor(m => m.RequestId)
    <label for="scan">
        Carton
    </label>
    <input id="scan" type="text" name="@Html.NameFor(m => m.CartonId)" size="20" />
}
@if (Model.CartonList.Count > 0)
{
    <table>
        <caption><i><b>Pull these cartons</b></i></caption>
        <tbody>
            @for (int i = 0; i < Model.CartonList.Count; i++)
            {
                <tr>
                    <td>
                        @(i + 1)
                    </td>
                    <td>@Model.CartonList[i].CartonId</td>
                    <td>@Model.CartonList[i].LocationId</td>
                    <td>@Model.CartonList[i].SkuDisplay</td>
                </tr>
            }
        </tbody>
    </table>
}
