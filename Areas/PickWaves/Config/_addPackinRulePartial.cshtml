@model DcmsMobile.PickWaves.ViewModels.Config.PackingRulesModel
@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}

<form class="form-horizontal" id="frmAddPackingRule" role="form"
      action="@Url.Action(MVC_PickWaves.PickWaves.Config.AddPackingRule())" method="post">
    <input type="hidden" name="@MVC_PickWaves.PickWaves.Config.AddPackingRuleParams.activeTab" value="2" />


    @Html.ValidationSummary("", new { @class = "text-danger" })


    <div class="form-group">
        <label for="case" class="col-sm-3 control-label">
            Style<sup><span class="glyphicon glyphicon-asterisk"></span></sup>
            @Html.TextBoxFor(m => m.Style, new { @id = "hfStyle", @style = "visibility:hidden" })
        </label>
        <div class="col-sm-9">            
                <div class="input-group">
                    <input placeholder="Search Style" id="tbStyle"
                           class="form-control typeahead" />
                    <span class="input-group-btn">
                        <span class="btn btn-default"><span class="glyphicon glyphicon-search"></span></span>
                    </span>
                </div>

            @Html.ValidationMessageFor(m => m.Style, null, new
           {
               @class = "help-block"
           })

        </div>
    </div>
    <div class="form-group">
        <label for="case" class="col-sm-3 control-label">Case <sup><span class="glyphicon glyphicon-asterisk"></span></sup></label>
        <div class="col-sm-9">
            @Html.DropDownListFor(m => m.CaseId, Model.SkuCaseList, "Please Select", new
       {
           @required = "required",
           @class = "form-control",
           @id="caseId"
       })

            @Html.ValidationMessageFor(m => m.CaseId, null, new
           {
               @class = "help-block"
           })
        </div>
    </div>
    <div class="form-group">

        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.IgnoreFlag) Ignore
                </label>
            </div>
        </div>
    </div>
</form>


<script src="@Links_PickWaves.Areas.PickWaves.Config._addPackinRule_js"></script>
