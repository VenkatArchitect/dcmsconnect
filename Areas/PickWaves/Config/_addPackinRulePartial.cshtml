@model DcmsMobile.PickWaves.ViewModels.Config.PackingRulesModel
@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}
<form class="form-horizontal" role="form" action="@Url.Action(MVC_PickWaves.PickWaves.Config.AddPackingRule())" method="post">
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <input type="hidden" name="@MVC_PickWaves.PickWaves.Config.AddPackingRuleParams.activeTab" value="2" />

    <div class="form-group">
        <label for="case" class="col-sm-3 control-label">Style<sup><span class="glyphicon glyphicon-asterisk"></span></sup> </label>
        <div class="col-sm-9">
            <div class="input-group">
                @Html.TextBoxFor(m => m.Style, new Dictionary<string, object>
       {
             {"id", "tbStyle"},
             {"placeholder","Search Style"},
             {"class","form-control typeahead"}

       })
                <span class="input-group-btn">
                    <span class="btn btn-default"><span class="glyphicon glyphicon-search"></span></span>
                </span>
            </div>
            <input type="hidden" name="@Model.Style" id="hfStyle" />


            @Html.ValidationMessageFor(m => m.Style, null, new
           {
               @class = "help-block"
           })
        </div>
    </div>
    <div class="form-group">
        <label for="case" class="col-sm-3 control-label">Case <sup><span class="glyphicon glyphicon-asterisk"></span></sup></label>
        <div class="col-sm-9">
            @Html.DropDownListFor(m => m.CaseId, Model.SkuCaseList, "Please Select", new
       {
           @required = "required",
           @class = "form-control"
       })

            @Html.ValidationMessageFor(m => m.CaseId, null, new
           {
               @class = "help-block"
           })
        </div>
    </div>
    <div class="form-group">

        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.IgnoreFlag) Ignore
                </label>
            </div>
        </div>
    </div>
</form>
<script src="@Links_PickWaves.Areas.PickWaves.Config._addPackinRule_js"></script>
<script type="text/javascript">
        $(document).ready($(function () {
            // Force the unobtrusive validation script to run
            // http://forums.asp.net/t/1651961.aspx/1
            $.validator.unobtrusive.parse("#frmAddPackingRule");
            //$('#tbStyle').autocompleteEx();
        }));
    </script>
