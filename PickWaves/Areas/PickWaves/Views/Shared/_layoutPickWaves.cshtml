<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <link href="@Links_PickWaves.Areas.PickWaves.Content.PickWaves_all_min_css" rel="stylesheet" type="text/css" />
    <link href="@Links_PickWaves.Content.themes.Start1_10_0.jquery_ui_min_css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="outer">
        <div id="header">
            <h1>@Html.Raw(ViewBag.Title)</h1>
            <h3>
                @ViewBag.Subtitle</h3>
        </div>
        <div id="menu">
            <ul>
                <li class="banner"><span>DCMS Connect - PickWaves</span></li>
                <li><a href="@Url.Content("~")" >DCMS Connect Home</a></li>
                <li><a href="@Url.Action(MVC_PickWaves.PickWaves.BoxPickPallet.Index())">Box Expediting</a></li>
                @*<li><a href="@Url.Action(MVC_PickWaves.PickWaves.Config.Index())">Wave Configuration</a></li>*@
                @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                {
                    <li>@PickWavesResource.Welcome @ViewContext.HttpContext.User.Identity.Name</li>
                }
                @if (ViewContext.HttpContext.Trace.IsEnabled)
                {
                    <li><a href="@Url.Content("~/trace.axd")" target="trace" >Trace</a> </li>
                }
            </ul>
        </div>
        <div id="content">
            <div id="primaryContentContainer">
                <div id="primaryContent" class="ui-widget">
                    @Html.ValidationSummary()
                    <div class="status-summary">
                        @Html.StatusSummary()
                    </div>
                    @RenderBody()
                </div>
            </div>
            <div id="secondaryContent">
                <div class="box">
                    <div class="boxContent">
                        <ul style="list-style-type: none">
                            @if (Request.Url.Segments.Length > 2)
                            {
                                //Do not show the home page Link on the home page
                                <li>@Html.ActionLink("Pick Waves Home", MVC_PickWaves.PickWaves.Home.Index())</li>
                            }
                            @if (this.Request.UrlReferrer != null)
                            { 
                                <li>
                                    <a href="@this.Request.UrlReferrer.OriginalString">Back</a></li>
                            }
                        </ul>
                    </div>
                    @if (Model != null && !Model.UserIsManager)
                    {
                        <div class="boxContent">
                            To perform individual managerial actions you, need to 
                                <a href="@(FormsAuthentication.LoginUrl + "?returnUrl=" + Url.Encode(Request.Url.PathAndQuery))">login
                                </a>as a user who has <em>@Model.ManagerRoleName</em> role.
                        </div>
                    }
                </div>
                <div class="box boxA">
                    <h3>Search of Pick Wave</h3>
                    <div class="boxContent">
                        @using (Html.BeginForm(MVC_PickWaves.PickWaves.Home.Search(), FormMethod.Get))
                        {               
                            <input type="text" name="@MVC_PickWaves.PickWaves.Home.SearchParams.searchText" size="12" 
                         style="text-transform: uppercase" class="required" />
                            <button id="btnSearch" type="submit">Go</button>
                            <div>
                                Pick Wave #, Customer Id, User name(Waves created by).
                            </div>
                        }                        
                    </div>
                </div>
                @RenderSection("sidebar", false)
            </div>
            <div class="clear">
            </div>
        </div>
        <div id="footer">
            <p>
                Copyright &copy; 2013 Eclipse Systems <a href="http://www.eclsys.com" target="_blank">http://www.eclsys.com</a>
            </p>
        </div>
    </div>
    <script src="@Links_PickWaves.Scripts.jquery_2_0_3_js"  type="text/javascript"></script>
    <script>$.uiBackCompat = false;</script>
    <script src="@Links_PickWaves.Scripts.jquery_ui_1_10_0_js" type="text/javascript"></script>
    <script src="@Links_PickWaves.Scripts.jquery_validate_js" type="text/javascript"></script>
    <script src="@Links_PickWaves.Scripts.jquery_validate_unobtrusive_js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnSearch').button();
        });
    </script>
    @RenderSection("scripts", false)
</body>
</html>
