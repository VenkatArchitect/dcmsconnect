@model DcmsMobile.Models.LogonModel
@{
    ViewBag.Title = "DCMS Mobile Login";
}
@if (string.IsNullOrEmpty(Model.UserName))
{
    using (Html.BeginForm(MVC_DcmsMobile.Logon.SetUser()))
    {
        <div>
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName)
            @Html.HiddenFor(m => m.ReturnUrl)
        </div>
    }
}
else
{
    using (Html.BeginForm(MVC_DcmsMobile.Logon.Login()))
    {
    <div>
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)
        <br />
        Password for <em>@Model.UserName</em>
        @Html.HiddenFor(m => m.UserName)
        @Html.HiddenFor(m => m.ReturnUrl)
    </div>
    }
}
<script src="@Links_DcmsMobile.DcmsMobile.Scripts.launcher_mobile_js" type="text/javascript"></script>