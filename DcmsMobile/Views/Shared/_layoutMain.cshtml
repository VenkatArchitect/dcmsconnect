@model DcmsMobile.Models.ViewModelBase
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <link href="@Links_DcmsMobile.DcmsMobile.Content.standardized_css" rel="stylesheet" type="text/css" />
    <link href="@Links_DcmsMobile.DcmsMobile.Content.Site_css" rel="stylesheet" type="text/css" />
    <link href="@Links_DcmsMobile.Content.themes.Start1_10_0.jquery_ui_min_css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="outer">
        <div id="menu">
            <ul>
                <li class="banner"><span>DCMS Connect</span></li>
                <li><a href="@Url.Content("~")" accesskey="0">DCMS Connect Home</a></li>
                @if (Model != null && Model.MasterMenuItems != null)
                {
                    foreach (var item in Model.MasterMenuItems)
                    {
                    <li><a href="@item.Url">@item.Name</a></li>
                    }
                }
                <li><a href="@Url.Content("~/Doc/Tutorial.pptx")" target="_blank" >Tutorial</a></li>
                @if (ViewContext.HttpContext.Trace.IsEnabled)
                {
                    <li><a href="@Url.Content("~/trace.axd")" target="trace" >Trace</a> </li>
                }
            </ul>
        </div>
        <div id="content" style="margin-top: 12mm">
            @if (ViewContext.HttpContext.Request.Browser.Browser.Trim().ToUpperInvariant() == "IE" && ViewContext.HttpContext.Request.Browser.MajorVersion < 8)
            {
                <div class="box">
                    <div class="boxContent ui-state-error">
                        This site is best viewed in <mark>Internet Explorer 9</mark> or higher, although IE8 and other
                       modern browsers work well too. Your browser is old and upgrading is strongly recommended.
                       The site may not be fully functional in your browser.
                    </div>
                </div>
                    
            }
            @if (ViewContext.HttpContext.IsDebuggingEnabled)
            {
                <div class="box">
                    <h3>Performance Alert</h3>
                    <div class="boxContent ui-state-error">
                        Debugging is enabled for this site. Performance may be suboptimal. Debugging can
                        be turned off by changing the web.config file.
                    </div>
                </div>
            }
        </div>
        <h1>@ViewBag.Title</h1>
        @Html.Partial(@MVC_DcmsMobile.Shared.Views._soundPartial, '\0')
        <div id="primaryContentContainer">
            <div id="secondaryContent">
                @RenderSection("sidebar", false)
            </div>
            <div id="primaryContent">
                <div>
                    @Html.StatusSummary()
                    @Html.ValidationSummary()
                </div>
                @RenderBody()
                <div id="footer">
                    <p>
                        Copyright &copy; 2012 Eclipse Systems <a href="http://www.eclsys.com" target="_blank">http://www.eclsys.com</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    @if (ViewContext.HttpContext.Request.Browser.Browser.Trim().ToUpperInvariant() == "IE" && ViewContext.HttpContext.Request.Browser.MajorVersion <= 8)
    {
        <script src="@Links_DcmsMobile.Scripts.jquery_1_8_2_js"  type="text/javascript"></script>
    }
    else
    { 
        <script src="@Links_DcmsMobile.Scripts.jquery_2_0_3_js"  type="text/javascript"></script>
    }
    <script>$.uiBackCompat = false;</script>
    <script type="text/javascript" src="@Links_DcmsMobile.Scripts.jquery_ui_1_10_0_js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input:first').focus();
        });
    </script>
    @RenderSection("scripts", false)
</body>
</html>
