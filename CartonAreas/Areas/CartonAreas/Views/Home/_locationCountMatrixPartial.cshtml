@model DcmsMobile.CartonAreas.ViewModels.LocationCountMatrixViewModel
<table>
    <caption>Filter by Location Type</caption>
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Empty
            </th>
            <th>
                Non Empty
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                Assigned
            </td>
            <td>
                @if (Model.GetCount(true, true) > 0)
                {
                    <input type="checkbox" />
                    @Html.ActionLink(Model.GetDisplayCount(true, true),
                                MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(Model.AreaId, true, true),
                                          Model.AssignedLocationsFilter == true && Model.EmptyLocationsFilter == true ? new
                                {
                                    @class = "ui-state-active"
                                } : null)
                }
            </td>
            <td>
                @if (Model.CountNonemptyAssignedLocations > 0)
                {
                    <input type="checkbox" />
                    @Html.ActionLink(Html.DisplayFor(m => m.CountNonemptyAssignedLocations).ToString(),
                                MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(Model.AreaId, true, false),
                                          Model.AssignedLocationsFilter == true && Model.EmptyLocationsFilter == false ? new
                                {
                                    @class = "ui-state-active"
                                } : null)

                }
            </td>
            <td>
                @if (Model.CountAssignedLocations > 0)
                {
                    <input type="checkbox" />
                    @Html.ActionLink(Html.DisplayFor(m => m.CountAssignedLocations).ToString(),
                                MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(Model.AreaId, true, null),
                                          Model.AssignedLocationsFilter == true && Model.EmptyLocationsFilter == null ? new
                                {
                                    @class = "ui-state-active"
                                } : null)
                }
            </td>
        </tr>
        <tr>
            <td>
                Unassigned
            </td>
            <td>
                @if (Model.CountEmptyUnassignedLocations > 0)
                {
                    <input type="checkbox" />
                    @Html.ActionLink(Html.DisplayFor(m => m.CountEmptyUnassignedLocations).ToString(),
                                MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(Model.AreaId, false, true),
                                               Model.AssignedLocationsFilter == false && Model.EmptyLocationsFilter == true ? new
                                     {
                                         @class = "ui-state-active"
                                     } : null
                                )
                }
            </td>
            <td>
                @if (Model.CountNonemptyUnassignedLocations > 0)
                {
                    <input type="checkbox" />
                    @Html.ActionLink(Html.DisplayFor(m => m.CountNonemptyUnassignedLocations).ToString(),
                                MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(Model.AreaId, false, false),
                                               Model.AssignedLocationsFilter == false && Model.EmptyLocationsFilter == false ? new
                                     {
                                         @class = "ui-state-active"
                                     } : null
                                )
                }
            </td>
            <td>
                @if (Model.CountUnassignedLocations > 0)
                {
                    <input type="checkbox" />
                    @Html.ActionLink(Html.DisplayFor(m => m.CountUnassignedLocations).ToString(),
                                MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(Model.AreaId, false, null),
                                               Model.AssignedLocationsFilter == false && Model.EmptyLocationsFilter == null ? new
                                     {
                                         @class = "ui-state-active"
                                     } : null
                                )
                }
            </td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td>
                Total
            </td>
            <td style="text-align:right">
                @if (Model.CountEmptyLocations > 0)
                {
                    @Html.ActionLink(Html.DisplayFor(m => m.CountEmptyLocations).ToString(),
                                MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(Model.AreaId, null, true),
                                               Model.AssignedLocationsFilter == null && Model.EmptyLocationsFilter == true ? new
                                     {
                                         @class = "ui-state-active"
                                     } : null
                                )
                }
            </td>
            <td style="text-align:right">
                @if (Model.CountNonemptyLocations > 0)
                {
                    @Html.ActionLink(Html.DisplayFor(m => m.CountNonemptyLocations).ToString(),
                                MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(Model.AreaId, null, false),
                                               Model.AssignedLocationsFilter == null && Model.EmptyLocationsFilter == false ? new
                                     {
                                         @class = "ui-state-active"
                                     } : null
                                )
                }
            </td>
            <td style="text-align:right">
                @if (Model.GetCount(null, null) > 0)
                {
                    @Html.ActionLink(Model.GetDisplayCount(null, null),
                                MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(Model.AreaId))
                }
            </td>
        </tr>
    </tfoot>
</table>

