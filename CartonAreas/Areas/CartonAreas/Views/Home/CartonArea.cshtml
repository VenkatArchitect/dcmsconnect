@model DcmsMobile.CartonAreas.ViewModels.CartonAreaViewModel
@{
    var i = 0;
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
    ViewBag.Title = "Carton Area Home";
}
<div id="divAreaList">
    @if (Model.CartonAreaList.Count() > 0)
    {
        <table>
            <caption>Carton Areas</caption>
            <thead>

                <tr>
                    <th>Building-Area<span style="display:inline-block;" class="ui-icon ui-icon-triangle-1-n"></span></th>
                    <th>Description</th>
                    <th># Locations</th>
                    <th>Numbered</th>
                    <th>Pallet Required</th>
                    <th>Unusable Inventory</th>
                    <th>Change</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model.CartonAreaList)
                {
                    <tr class="@(i % 2 == 0 ? "rowA" : "rowB")">
                        <td style="white-space:nowrap;">@(item.BuildingId == "" ? "(All)" : item.BuildingId) - @item.ShortName</td>
                        <td><span class="data-Description">@item.Description</span></td>
                        <td style="text-align: right">
                            @if (item.LocationNumberingFlag)
                            {
                                <a href="@Url.Action(MVC_CartonAreas.CartonAreas.Home.ManageCartonArea(item.AreaId))">@item.TotalLocations</a>
                            }
                            else
                            {
                                @item.TotalLocations
                            }
                        </td>

                        <td style="text-align: center">
                            <span class="@(item.LocationNumberingFlag == true ? "ui-icon ui-icon-check data-numbered-location":"" )" title="Numbered Location"
                                  style="display: inline-block" />
                        </td>
                        <td style="text-align: center">
                            <span class="@(item.IsPalletRequired == true ? "ui-icon ui-icon-check data-Pallet-Required" : "")" title="Pallet required"
                                  style="display: inline-block;" />
                        </td>
                        <td style="text-align: center">
                            <span class="@(item.UnusableInventory == true ? " ui-icon ui-icon-check data-Unusable-Inventory" : "")" title="Unusable Inventory"
                                  style="display: inline-block;" />
                        </td>
                        <td style="text-align: center">
                            <span class="data-area-id ui-helper-hidden">@item.AreaId</span>
                            <span class="ui-icon ui-icon-pencil" title='Update area @item.ShortName' style="display: inline-block; cursor: pointer;"/>
                        </td>
                    </tr>
                            i++;
                }
            </tbody>
        </table>

    }

</div>
<div id="divUpdateAreaDialog">
    @Html.Partial(MVC_CartonAreas.CartonAreas.Home.Views._updateFlagDialogPartial, Model.CurrentArea)
</div>
@section scripts
{
    <script src="@Links_CartonAreas.Areas.CartonAreas.Scripts.CartonArea_all_min_js" type="text/javascript"></script>
}
@*$Id$*@
